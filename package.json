{
  "name": "tamarind",
  "version": "0.1.0",
  "description": "An embeddable WebGL shader editor and utilities",
  "main": "dist/tamarind.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/BernieSumption/tamarind.git"
  },
  "keywords": [
    "WebGL",
    "shader",
    "editor",
    "canvas"
  ],
  "scripts": {
    "clean": "rm -rf node_modules build",
    "test": "npm install && npm run build:debug && node_modules/.bin/karma start --single-run",
    "build:debug": "npm install && node_modules/brunch/bin/brunch build",
    "build:dist": "npm install && node_modules/brunch/bin/brunch build --production",
    "docs": "npm install && node_modules/brunch/bin/brunch build && node_modules/codo/bin/codo app/**/*.coffee && mkdir -p docs/extra/branding && cp branding/logo.png docs/extra/branding/logo.png",
    "dist": "npm run clean && npm run test && npm run build:dist && npm run docs && rm -rf dist && mv build dist",
    "live": "./node_modules/.bin/beefy app/tamarind/Tamarind.coffee:tamarind.js --live --index app/assets/test/Tamarind-demo.html -- --standalone Tamarind"
  },
  "author": "Bernie Sumption",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BernieSumption/tamarind/issues"
  },
  "homepage": "https://github.com/BernieSumption/tamarind",
  "devDependencies": {
    "beefy": "^2.1.3",
    "browserify": "^9.0.3",
    "codemirror": "^5.1.0",
    "coffee-script": "^1.9.1",
    "coffeeify": "^1.0.0",
    "del": "^1.1.1",
    "exorcist": "^0.1.6",
    "gulp": "^3.8.11",
    "gulp-rename": "^1.2.0",
    "gulp-watch": "^4.2.2",
    "jasmine-core": "^2.2.0",
    "karma": "^0.12.31",
    "karma-browserify": "^4.1.2",
    "karma-chrome-launcher": "^0.1.7",
    "karma-jasmine": "^0.3.5",
    "karma-sourcemap-loader": "^0.3.4",
    "node-lessify": "BernieSumption/node-lessify#b0b35cd345",
    "run-sequence": "^1.0.2",
    "uglify": "^0.1.3",
    "urify": "^1.0.6",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "vinyl-transform": "^1.0.0",
    "watchify": "^3.1.0"
  },
  "browserify": {
    "transform": [
      "coffeeify",
      "node-lessify",
      "urify"
    ]
  }
}
